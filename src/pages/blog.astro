---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>... and my new Astro site!</h2>
  <p>
    I'm Rachael, a web developer and designer. I love creating beautiful and
    functional websites and applications. I'm passionate about web accessibility
    and inclusive design. I'm also a big fan of open source software and the web
    platform.
  </p>
  <ul>
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
